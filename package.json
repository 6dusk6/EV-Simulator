{
  "name": "ev-simulator",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "npm run test:ui",
    "test:canon": "node --max-old-space-size=4096 ./node_modules/vitest/vitest.mjs run tests/engine.canon.ev.test.js tests/engine.canon.decision.test.js --pool=forks --poolOptions.forks.singleFork --no-file-parallelism --reporter=verbose --bail=1 --disableConsoleIntercept",
    "test:smoke": "node --max-old-space-size=4096 ./node_modules/vitest/vitest.mjs run tests/engine.woo.ev.test.js tests/engine.woo.decision.test.js --pool=forks --poolOptions.forks.singleFork --no-file-parallelism --reporter=verbose --bail=1 --disableConsoleIntercept",
    "canon:gen": "node tests/generate_canon.js",
    "precompute:split": "node scripts/generate-split-precompute.js && node scripts/finalize-split-precompute.js S17_DAS_DR-any_NOPEEK_6D",
    "precompute:split:finalize": "node scripts/finalize-split-precompute.js",
    "precompute:split:template": "node scripts/export-split-template.js",
    "split:template-to-csv": "node scripts/template-to-split-csv.js",
    "precompute:split:csv:export": "node scripts/export-split-csv-template.js",
    "precompute:split:csv:import": "node scripts/import-split-csv.js",
    "precompute:split:validate": "node scripts/validate-split-precompute.js",
    "precompute:split:validate:all": "node scripts/validate-split-precompute.js --all",
    "precompute:split:6d": "node scripts/generate-split-precompute.js --decks=6",
    "precompute:split:6d:h17:das:rsa": "node scripts/generate-split-precompute.js --decks=6 --hitSoft17 --doubleAfterSplit --resplitAces",
    "test:full": "npm run test:canon && npm run test:smoke",
    "test:ui": "npm run test:smoke"
  },
  "devDependencies": {
    "vitest": "^2.1.5"
  }
}
